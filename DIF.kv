WindowManager:
    StartScreen:
    LoginScreen:
    CredentialScreen:
    MainScreen:
<Label>
    font_size: 40

<TextInput>
    font_size: 40
    background_color: (240/255, 240/255, 240/255, 1)

<Button>
    font_size: 40

<StartScreen>:
    name: "start"

    BoxLayout:
        orientation: "vertical"
        size: root.width, root. height
        padding: 40
        spacing: 40
        Label:
            text: "Daily Image Finder"
            pos_hint: {'center_x': .5, 'center_y': .5}
            size_hint: (None, None)
            width: 100
            height: 30

        Button:
            text: "Login"
            on_press: root.login()

        Button:
            text: "Create Account"
            on_press: root.create_account()

<LoginScreen>:
    name: "login"

    BoxLayout:
        orientation: "vertical"
        size: root.width, root. height
        padding: 40
        spacing: 40

        Button:
            text: "Home"
            #pos_hint: {'center_x': .1, 'center_y': .5}
            size_hint: (.1 , .3)
            font_size: 20
            on_press: root.home()

        TextInput:
            id: email
            hint_text: 'Enter Email'
            multiline: False
            size_hint: (1, .5)

        TextInput:
            id: password
            hint_text: 'Enter Password'
            multiline: False
            size_hint: (1, .5)

        Button:
            text: "Login"
            on_press: root.login(email.text, password.text)


<CredentialScreen>:
    name: "credential"

    BoxLayout:
        orientation: "vertical"
        size: root.width, root. height
        padding: 40
        spacing: 40

        Button:
            text: "Home"
            #pos_hint: {'center_x': .1, 'center_y': .5}
            size_hint: (.1 , .3)
            font_size: 20
            on_press: root.home()

        TextInput:
            id: new_email
            hint_text: 'Enter New Email'
            multiline: False
            size_hint: (1, .5)

        TextInput:
            id: password
            hint_text: 'Enter New Password'
            multiline: False
            size_hint: (1, .5)

        Button:
            text: "Create"
            on_press: root.create_account()

<MainScreen>:
    name: "main"

    BoxLayout:
        orientation: "vertical"
        size: root.width, root. height
        padding: 40
        spacing: 40

        Button:
            text: "Home"
            #pos_hint: {'center_x': .1, 'center_y': .5}
            size_hint: (.1 , .3)
            font_size: 20
            on_press: root.home()

        Label:
            text: "Current Key Word:"
            pos_hint: {'center_x': .5, 'center_y': .5}
            size_hint: (None, None)
            width: 100
            height: 30

        Label:
            id: key_word
            text: ""
            pos_hint: {'center_x': .5, 'center_y': .5}
            size_hint: (None, None)
            width: 100
            height: 30

        TextInput:
            id: new_keyword
            hint_text: 'Enter New Key Word'
            multiline: False
            size_hint: (1, .5)

        Button:
            text: "Submit"
            on_press: root.update_key_word()